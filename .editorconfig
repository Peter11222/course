root=true

[*] # 适用于所有文件
charset = utf-8 # 设置字符集为 UTF-8
indent_style = space #缩进风格为 tab/space
indent_size = 2 # 缩进大小为 2 个空格
end_of_line = lf # 控制换行类型（lf|cr|crlf）
trim_trailing_whitespace = true # 去除行尾的任意空白字符
insert_final_newline = true # 始终在行尾插入一个新行

[*.md] # 适用于所有 Markdown 文件
max_line_length = off
trim_trailing_whitespace=false